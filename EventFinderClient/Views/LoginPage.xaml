<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventFinderClient.Views.LoginPage"
             Title="Вход">

    <ScrollView>
        <VerticalStackLayout>

            <Label Text="LocalEventFinder" 
                   Style="{StaticResource Title}"
                   HorizontalOptions="Center"
                   Margin="0,40,0,20" />

            <Frame Style="{StaticResource Card}">
                <VerticalStackLayout>

                    <Label Text="Вход в систему"
                           Style="{StaticResource Subtitle}"
                           HorizontalOptions="Center"
                           Margin="0,0,0,20" />

                    <Label Text="Email" 
                           Style="{StaticResource Body}" />
                    <Entry Placeholder="Введите email"
                           Text="{Binding Email}"
                           Keyboard="Email" />

                    <Label Text="Пароль" 
                           Style="{StaticResource Body}"
                           Margin="0,15,0,0" />
                    <Entry Placeholder="Введите пароль"
                           Text="{Binding Password}"
                           IsPassword="True" />

                    <Label Text="{Binding ErrorMessage}"
                           TextColor="{StaticResource Error}"
                           Style="{StaticResource Caption}"
                           Margin="0,10">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" 
                                         Binding="{Binding ErrorMessage}" 
                                         Value="{x:Null}">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" 
                                         Binding="{Binding ErrorMessage}" 
                                         Value="">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>

                    <Button Text="Войти"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,20" />

                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       HorizontalOptions="Center"
                                       Margin="0,10" />

                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="Нет аккаунта?" 
                               Style="{StaticResource Caption}" />
                        <Label Text="Зарегистрируйтесь"
                               TextColor="{StaticResource Primary}"
                               Style="{StaticResource Caption}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding RegisterCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>