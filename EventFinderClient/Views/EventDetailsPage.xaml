<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventFinderClient.Views.EventDetailsPage"
             xmlns:converters="clr-namespace:EventFinderClient.Converters"
             Title="Детали">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />

            <StackLayout IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}">

                <Frame CornerRadius="10" Padding="15" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="{Binding Event.Title}"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />

                        <HorizontalStackLayout Margin="0,10,0,0" Spacing="5">
                            <Label Text="{Binding Event.DateTime, StringFormat='{0:dd.MM.yyyy}'}"
                                   FontSize="16"
                                   TextColor="{StaticResource GrayDark}" />
                            <Label Text="•"
                                   FontSize="16"
                                   TextColor="{StaticResource GrayDark}" />
                            <Label Text="{Binding Event.DateTime, StringFormat='{0:HH:mm}'}"
                                   FontSize="16"
                                   TextColor="{StaticResource GrayDark}" />
                            <Label Text="•"
                                   FontSize="16"
                                   TextColor="{StaticResource GrayDark}" />
                            <Label Text="{Binding Event.Category}"
                                   FontSize="16"
                                   TextColor="{StaticResource Primary}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Frame CornerRadius="10" Padding="15" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Описание"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource GrayDark}" />
                        <Label Text="{Binding Event.Description}"
                               Margin="0,10,0,0"
                               FontSize="16"
                               TextColor="{StaticResource GrayDark}" />
                    </VerticalStackLayout>
                </Frame>

                <Frame CornerRadius="10" Padding="15" HasShadow="True"
                       IsVisible="{Binding Venue, Converter={StaticResource NotNullConverter}}">
                    <VerticalStackLayout>
                        <Label Text="Место проведения"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource GrayDark}" />

                        <Label Text="{Binding Venue.Name}"
                               Margin="0,10,0,0"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />

                        <Label Text="{Binding Venue.Address}"
                               Margin="0,5,0,0"
                               FontSize="14"
                               TextColor="{StaticResource GrayDark}" />

                        <Label Text="{Binding Venue.Capacity, StringFormat='Вместимость: {0} человек'}"
                               Margin="0,5,0,0"
                               FontSize="14"
                               TextColor="{StaticResource Gray}" />
                    </VerticalStackLayout>
                </Frame>

                <Frame CornerRadius="10" Padding="15" HasShadow="True"
                       IsVisible="{Binding Organizer, Converter={StaticResource NotNullConverter}}">
                    <VerticalStackLayout>
                        <Label Text="Организатор"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource GrayDark}" />

                        <Label Text="{Binding Organizer.Name}"
                               Margin="0,10,0,0"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />

                        <HorizontalStackLayout Margin="0,5,0,0" Spacing="10">
                            <Label Text="{Binding Organizer.ContactPhone, StringFormat='{0}'}"
                                   FontSize="14"
                                   TextColor="{StaticResource GrayDark}" />
                            <Label Text="•"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray}" />
                            <Label Text="{Binding Organizer.Email}"
                                   FontSize="14"
                                   TextColor="{StaticResource GrayDark}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Frame CornerRadius="10" Padding="15" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Информация о мероприятии"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource GrayDark}" />

                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" 
                              RowSpacing="10" ColumnSpacing="10">

                            <Label Text="Стоимость:"
                                   Grid.Row="0" Grid.Column="0"
                                   FontSize="16"
                                   TextColor="{StaticResource GrayDark}" />
                            <Label Text="{Binding Event.Price, StringFormat='{0:C}'}"
                                   Grid.Row="0" Grid.Column="1"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}" 
                                   HorizontalOptions="End" />

                            <Label Text="Участники:"
                                   Grid.Row="1" Grid.Column="0"
                                   FontSize="16"
                                   TextColor="{StaticResource GrayDark}" />
                            <Label Text="{Binding Event.CurrentAttendees, StringFormat='{0} / {1}'}"
                                   Grid.Row="1" Grid.Column="1"
                                   FontSize="16"
                                   TextColor="{StaticResource GrayDark}"
                                   HorizontalOptions="End" />

                            <Label Text="Продолжительность:"
                                   Grid.Row="2" Grid.Column="0"
                                   FontSize="16"
                                   TextColor="{StaticResource GrayDark}" />
                            <Label Text="{Binding Event.Duration, StringFormat='{0} мин.'}"
                                   Grid.Row="2" Grid.Column="1"
                                   FontSize="16"
                                   TextColor="{StaticResource GrayDark}"
                                   HorizontalOptions="End" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <Frame CornerRadius="10" Padding="15" HasShadow="True">
                    <VerticalStackLayout Spacing="10">

                        <Button Text="Зарегистрироваться на мероприятие"
                                Command="{Binding RegisterCommand}"
                                Style="{StaticResource SuccessButton}"
                                IsVisible="{Binding IsRegistered, Converter={StaticResource InverseBoolConverter}}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                             Binding="{Binding Event.HasAvailableSpots}"
                                             Value="False">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="Text" Value="Мест нет" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource Gray}" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>

                        <Button Text="Отменить регистрацию"
                                Command="{Binding UnregisterCommand}"
                                Style="{StaticResource ErrorButton}"
                                IsVisible="{Binding IsRegistered}" />

                    </VerticalStackLayout>
                </Frame>

                <Button Text="← Назад к списку"
                        Command="{Binding GoBackCommand}"
                        Margin="0,10,0,0"
                        Padding="20"
                        CornerRadius="10"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="{StaticResource Primary}"
                        FontSize="16" />

            </StackLayout>

        </StackLayout>
    </ScrollView>


</ContentPage>