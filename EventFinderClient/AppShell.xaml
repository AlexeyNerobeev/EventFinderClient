<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EventFinderClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EventFinderClient"
    xmlns:views="clr-namespace:EventFinderClient.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="EventFinderClient">

    <TabBar Route="MainTab">
        <ShellContent
            Title="Мероприятия"
            ContentTemplate="{DataTemplate views:EventsPage}"
            Route="EventsPage"/>

        <ShellContent
            Title="Профиль"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Route="ProfilePage"/>
    </TabBar>

    <ShellContent
    Title="Регистрация"
    ContentTemplate="{DataTemplate views:RegisterPage}"
    Route="RegisterPage"/>
    
    <ShellContent
    Title="Авторизация"
    ContentTemplate="{DataTemplate views:LoginPage}"
    Route="LoginPage"/>
    
    <ShellContent
    Title="Детали"
    ContentTemplate="{DataTemplate views:EventDetailsPage}"
    Route="EventDetailsPage"/>

</Shell>
