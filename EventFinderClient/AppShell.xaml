<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EventFinderClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EventFinderClient"
    xmlns:views="clr-namespace:EventFinderClient.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="EventFinderClient">

    <FlyoutItem Title="Login">
        <ShellContent
              ContentTemplate="{DataTemplate views:LoginPage}"
              Route="LoginPage" />
    </FlyoutItem>

    <FlyoutItem Title="Register">
        <ShellContent
           ContentTemplate="{DataTemplate views:RegisterPage}"
           Route="RegisterPage" />
    </FlyoutItem>

    <FlyoutItem Title="Events">
        <ShellContent
           ContentTemplate="{DataTemplate views:EventsPage}"
           Route="EventsPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="EventDetails">
        <ShellContent
           ContentTemplate="{DataTemplate views:EventDetailsPage}"
           Route="EventDetailsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Profile">
        <ShellContent
           ContentTemplate="{DataTemplate views:ProfilePage}"
           Route="ProfilePage" />
    </FlyoutItem>

</Shell>
